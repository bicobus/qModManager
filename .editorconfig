root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
tab_width = 4

[*.py]
max_line_length = 98
insert_final_newline = true
include_trailing_comma = true
force_grid_wrap = 0
use_parentheses = true

[{*.bash,*.zsh,*.sh}]
indent_size = 2
tab_width = 2

[Makefile]
indent_style = tab
tab_width = 2

[{*.yml,*.yaml}]
indent_size = 2
